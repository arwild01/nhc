function check_fs_rw() {

	local FS
	for FS; {
		local filename="$FS/check_fs_rw.$$.$RANDOM"

		if : >"$filename"; then
			if rm -f "$filename"; then
				:
			else
				die 1 "$FUNCNAME: failed to rm $filename"
			fi
		else
			die 1 "$FUNCNAME: $FS is not writeable"
		fi
	}

	return 0
}
